<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/speical_fragment_tabulate_background"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/speical_fragment_tabulate_img"
    android:scaleType="fitXY"
    android:layout_width="@dimen/x316"
    android:background="#f00"
    android:layout_height="@dimen/y100" />

    <TextView
        android:id="@+id/speical_fragment_tabulate_name"
        android:layout_width="@dimen/x316"
        android:layout_height="@dimen/y25"
        android:gravity="center"
        android:text="王梓"
        android:textColor="#fff"
        android:textSize="@dimen/y20"
        android:background="#fff"
        android:singleLine="true"
        android:layout_alignBottom="@+id/speical_fragment_tabulate_img"
        android:layout_alignParentStart="true"
        tools:ignore="RtlCompat" />
    </RelativeLayout>
</RelativeLayout>