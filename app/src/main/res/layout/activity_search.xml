<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_colorful"
    tools:context=".mvp.view.activities.SearchActivity">

    <RelativeLayout
        android:id="@+id/search_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/search_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="80pt"
            android:background="@drawable/search_kuang"
            android:gravity="center"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="10pt"
                android:background="@mipmap/search"/>

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10pt"
                android:background="@null"
                android:hint="请输入您喜欢的电影"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <ImageView
                android:id="@+id/search_clean_edittext"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@mipmap/search_history_clear"
                android:layout_marginRight="10pt"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/search_textview"
            android:layout_width="wrap_content"
            android:layout_height="80pt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10pt"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_history_relativelayout"
        android:layout_below="@+id/search_relativelayout">
    <RelativeLayout
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索记录"
            android:textColor="#ffffff"
            android:layout_marginLeft="10pt"/>
        <ImageView
            android:id="@+id/search_clean"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@mipmap/search_clear"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20pt"/>
    </RelativeLayout>
    <com.lee.myghost.mvp.view.customviews.WordWrapView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:id="@+id/search_wordwrapview"
        android:layout_below="@+id/search_history"></com.lee.myghost.mvp.view.customviews.WordWrapView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/search_wordwrapview">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门推荐"
            android:textColor="#ffffff"
            android:layout_marginLeft="10pt"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_recyclerview"
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_listings_recyclerview"
    android:layout_below="@+id/search_relativelayout"
    android:visibility="gone"
    ></android.support.v7.widget.RecyclerView>

</RelativeLayout>