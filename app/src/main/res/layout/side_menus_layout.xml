<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160pt"
            android:layout_height="160pt"
            android:layout_marginLeft="47pt"
            android:layout_marginTop="110pt"
            android:src="@mipmap/photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="37pt"
            android:text="微影，微一下"
            android:textColor="#fff"
            android:textSize="32pt"/>

        <RelativeLayout
            android:id="@+id/my_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_sc"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/collect_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="我的收藏"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/download_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="我的下载"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_welfare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/smile_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="福利"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/share_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="分享"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/android_robot_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="建议反馈"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_seetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="54pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/seetings_icon"
                tools:ignore="RtlCompat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42pt"
                android:text="设置"
                android:textColor="#fff"
                android:textSize="32pt"
                tools:ignore="RtlCompat"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180pt">

            <RelativeLayout
                android:id="@+id/slide_about"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginLeft="70pt">

                <ImageView
                    android:id="@+id/about_img"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/user_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50pt"
                    android:gravity="center"
                    android:text="关于"
                    android:textColor="#fff"
                    android:textSize="32pt"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slide_theme"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginLeft="220pt">

                <ImageView
                    android:id="@+id/theme_img"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/theme_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50pt"
                    android:gravity="center"
                    android:text="主题"
                    android:textColor="#fff"
                    android:textSize="32pt"/>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>


</ScrollView>
