<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".mvp.view.activities.VideoListActivity">

    <TextView
        android:id="@+id/special_title"
        android:layout_width="match_parent"
        android:layout_height="86pt"
        android:background="#FF4336"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:text="专题"
        android:textColor="#fff"
        android:textSize="32pt"></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/video_list_tiaomu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>