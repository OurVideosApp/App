<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fadingEdge="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:id="@+id/choiceness_banner"></com.youth.banner.Banner>
    <RelativeLayout
        android:id="@+id/choiceness_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/choiceness_banner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y39"
            android:text="精彩推荐"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginLeft="@dimen/x26"
            android:gravity="center"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/choiceness_recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choiceness_recommend">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <LinearLayout
            android:id="@+id/choiceness_linearlayout"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y40"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/sousuokuang"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:background="@mipmap/search"
                android:layout_marginLeft="@dimen/x30"
                />
            <EditText
                android:id="@+id/choiceness_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:hint="一念天堂"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginRight="@dimen/x10"/>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>