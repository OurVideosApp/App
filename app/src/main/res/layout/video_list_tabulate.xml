<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/speical_fragment_tabulate_background"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/speical_fragment_tabulate_img"
            android:scaleType="fitXY"
            android:layout_width="316pt"
            android:background="#f00"
            android:layout_height="180pt" />

        <TextView
            android:id="@+id/speical_fragment_tabulate_name"
            android:layout_width="316pt"
            android:layout_height="25pt"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/speical_fragment_tabulate_img"
            android:gravity="center"
            android:singleLine="true"
            android:text="王梓"
            android:textSize="20pt"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
</RelativeLayout>